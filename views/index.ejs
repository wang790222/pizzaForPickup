<!DOCTYPE html>
<html lang="en">
<% include ./partials/_header %>
</div>
<img width="100%" max-height=50px src="pizzahero.jpg" alt="Delicious Pizza waiting to be Picked Up!" class="hero">

    <h1>New Order </h1>
    <section>
      <ol id="pizza_info">
      </ol>
    </section>
<!-- add pizza form -->
    <p>
    <button id="add_new_pizza" class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapsePizzaForm" aria-expanded="true" aria-controls="collapsePizzaForm">
      Add New Pizza
    </button>
    </p>
    <div class="collapse" id="collapsePizzaForm">
      <div class="card card-body">

      <h4>Size</h4>
      <ul class="nav nav-pills mb-3" id="size" role="tablist">
          <% for (i = 0; i < sizes.length; i++) { %>
          <li class="nav-item">
            <% if(i === 0){ %>
              <a class="nav-link active show" id="<%= sizes[i].name.toLowerCase() %>" data-toggle="pill" data-time="<%= sizes[i]['time_prep'] %>" data-cost="<%= sizes[i]['cost'] %>" href="  #pills-home"  role="tab"
              aria-controls="pills-home" aria-selected="true"><%= sizes[i]['name'] %></a>
            <% } else { %>
              <a class="nav-link" id="<%= sizes[i].name.toLowerCase() %>" data-toggle="pill" data-time="<%= sizes[i]['time_prep'] %>" data-cost="<%= sizes[i]['cost'] %>" href="  #pills-home"  role="tab"
              aria-controls="pills-home" aria-selected="true"><%= sizes[i]['name'] %></a>
            <% } %>
          </li>
          <% } %>
        </ul>
      <br>

      <h4>Crust</h4>
      <ul class="nav nav-pills mb-3" id="crust" role="tablist">
          <% for (i = 0; i < crusts.length; i++) { %>
          <li class="nav-item">
            <% if(i === 0){ %>
              <a class="nav-link active show" id="<%= crusts[i].name.toLowerCase() %>" data-toggle="pill" data-time="<%= crusts[i]['time_prep'] %>" data-cost="<%= crusts[i]['cost'] %>" href="  #pills-home"  role="tab"
              aria-controls="pills-home" aria-selected="true"><%= crusts[i]['name'] %></a>
            <% } else { %>
              <a class="nav-link" id="<%= crusts[i].name.toLowerCase() %>" data-toggle="pill" data-time="<%= crusts[i]['time_prep'] %>" data-cost="<%= crusts[i]['cost'] %>" href="  #pills-home"  role="tab"
              aria-controls="pills-home" aria-selected="true"><%= crusts[i]['name'] %></a>
            <% } %>
          </li>
          <% } %>
        </ul>
      <br>
      <h4>Toppings</h4>
      <div class="form-check form-check-inline">
      <% for ( i = 0; i < toppings.length; i++) { %>
        <input style="margin-left:3px; class="form-check-input" type="checkbox" id="<%= toppings[i]['name'].toLowerCase().split(' ').join('') %>" data-time="<%= toppings[i]['time_prep'] %>" data-cost="<%= toppings[i]['cost'] %>"value="option1">
        <label for="<%= toppings[i]['name'].toLowerCase().split(' ').join('') %>"><%= toppings[i]['name'] %></label>
      <% } %>
      </div>

      <br>
      <button type="button" id="add_pizza" class="btn btn-lg btn-primary">Add Pizza</button>
      <br>

      </div>
    </div>

<!-- extras form -->

<ul class="extra">
  <% for ( i = 0; i < extras.length; i++) { %>
    <li style="width:50%;" class="qty mt-5" id="<%= extras[i]['name'].toLowerCase().split(' ').join('') %>" data-time="<%= extras[i]['time_prep'] %>" data-cost="<%= extras[i]['cost'] %>">
      <h4 style="display:inline;"><%= extras[i]['name'] %></h4>
      <span style="float:right;" class="minus bg-dark">-</span>
      <input style="float:right;" type="number" class="count" name="qty" value="0">
      <span style="float:right;" class="plus bg-dark">+</span>
    </li>
  <% } %>
</ul>
</div>
